{
  "manifest_version": 3,
  "name": "Pocket Watcher",
  "description": "Watches the price of WoW tokens and alerts you when the price falls below a specific threshold.",
  "version": "1.0",
  "action": {
    "default_popup": "pw-settings.html"
  },
  "permissions": [
    "notifications",
    "alarms",
    "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "pw-settings.html",
  "host_permissions": ["https://wowtokenprices.com/current_prices.json"],
  "icons": {
    "16": "pictures/icon16.png",
    "32": "pictures/icon32.png",
    "48": "pictures/icon48.png",
    "128": "pictures/icon128.png"
  }
}